 <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBm41DL_X-SFXrmzKtqzmy3YR2ZnynXoVE&callback=initMap"></script>
<script type="text/javascript" src="/javascript/map.js"></script>
    <section class="resortSection">
        <div class="homeButton">
            <a href = "/" class="home btn">GO HOME</a>
        </div>
        <h1>{{resortName}}</h1>
        <div class="resortRow1">
            <div id="resortPics">
                {{#if photo1}}
                  <img src="{{photo1}}" alt="{{resortName}}" />
                {{/if}}
                <div class="slider"></div>
            </div>
            <div class="resortInfo">
                <h2>Resort Details</h2>
                <p>{{description}}</p>
            </div>
        </div>
    </section>

    <section class="resortSection2">
        <h1>Resort Opportunities</h1>
        <div class="resortRow2">
            <div id="resortOpp">
                <div id="map" style="height: 500px"></div>
                <!-- box -->
            </div>
            <div class="googleMap">
                <ul class="resortDetails">
                    <li><span>Airport:</span> {{closestAirport}}</li>
                    <li><span>Address:</span> <p id="resortAddress">{{address}}</p></li>
                    <li><span>Phone:</span> <a href="tel:{{phoneNumber}}">{{phoneNumber}}</a></li>
                    <li><span>Website:</span> <a href="{{website}}" target="_blank">Website</a></li>
                </ul>
            </div>
        </div>
    </section>